# Database (PostgreSQL - recommended, use docker-compose up -d)
DATABASE_URL=postgresql://gpx:secret@localhost:5432/gpx_predict

# For development without Docker (SQLite)
# DATABASE_URL=sqlite:///./app.db

# API Settings
DEBUG=true
LOG_LEVEL=DEBUG

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Elevation API
# Option 1: Open-Elevation (free, slower)
ELEVATION_API_URL=https://api.open-elevation.com/api/v1/lookup

# Option 2: Self-hosted (faster, requires setup)
# ELEVATION_API_URL=http://localhost:8080/api/v1/lookup

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Future: Strava Integration
# STRAVA_CLIENT_ID=
# STRAVA_CLIENT_SECRET=
# STRAVA_WEBHOOK_VERIFY_TOKEN=
